<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
<android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
            android:text="Calcular"
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_calc" android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_etanol" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:onClick="btCalcular"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="125dp" app:srcCompat="@drawable/logo" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView" android:scaleType="fitXY"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço Gasolina"
            android:ems="10"
            android:id="@+id/edit_gaso" android:layout_marginTop="88dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:inputType="numberDecimal"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço Etanol"
            android:ems="10"
            android:id="@+id/edit_etanol"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginTop="76dp" app:layout_constraintTop_toBottomOf="@+id/edit_gaso"
            android:inputType="numberDecimal"/>
    <TextView
            android:layout_width="310dp"
            android:layout_height="81dp"
            android:id="@+id/text_resultado" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/button_calc" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.488" android:gravity="center" android:textSize="18sp"
            android:text="Vamos descobrir a melhor opção de combustivel para você!!!"/>
</android.support.constraint.ConstraintLayout>
</ScrollView>